{% comment %}
  This is used to create CSS custom variables with Liquid references
  The file variables.scss is referring these CSS custom variables as Sass variables
  to use throughout the stylesheet
{% endcomment %}
{% style %}

    :root {
    /*================ Color Variables ================*/
    --color-primary: {{ settings.color_primary }};
    --color-bright: {{ settings.color_bright }};
    --color-black: {{ settings.color_black }};

    /*================ Text colors ================*/
    --color-body-text: {{ settings.color_body_text }};
    --color-yellow: #fbb03b;
    --color-white: #FFFFFF;
    --color-product-text: #dcdcdc;
    --color-dark-text: #010101;
    --color-text-black: #181818;
    --color-coca-cola: #F40009;
    --color-light-grey: #424242;

    /*================ Backgrounds ================*/
    --color-body: #ffffff;
    --color-background-product: #010101;
    --color-background-light: #ffffff;

    /*================ Border colors ================*/
    --color-border: #b2b2b2;
    --color-border-black: #010101;

    /*================ Helper colors for form error states ================*/
    --color-disabled: #000;
    --color-disabled-border: #000;
    --color-error: #000;
    --color-error-bg: #000;
    --color-success: #000;
    --color-success-bg: #000;

    /*================ Typography Variables ================*/
    --font-weight-normal: 400;
    --font-weight-help: 600;
    --font-weight-bold: 700;
    --font-size-title: {{ settings.type_base_title_size }};
    --font-stack-header: futura-pt-condensed, Arial, sans-serif;
    --font-weight-header: --font-weight-bold;
    --font-stack-body: futura-pt, Arial, sans-serif;
    --font-size-base: {{ settings.type_base_size }};
    --font-stack-help: futura-pt, Arial, sans-serif;

    /*============================================================================
    Grid Breakpoints - while variables in css are not supported, use media query with the following values
    mobile: 480px;
    tablet: 750px;
    medium: 966px;
    large: 1174px;
    wide: 1360px;
    widescreen: 1440px;
    gutter: 32px;
    ==============================================================================*/
    }
    @font-face {
    font-family: "Industry-MediumItalic";
    src: url('{{ "Industry-MediumItalic.otf" | asset_url }}');

    }

{% endstyle %}
