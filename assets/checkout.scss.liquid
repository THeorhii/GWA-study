body.hide-special-metafield {
  .order-summary__section.order-summary__section--discount{
    display: none!important;
  }
  div[data-step="payment_method"] .section.section--reductions.hidden-on-desktop{
    display: none!important;
  }
}

$primaryColor: {{ settings.color_primary }};
.breadcrumb__item--current ~ .breadcrumb__item {
  a {
    pointer-events: none;
    color: #737373;
  }
}
.search-field {
  .field__input-wrapper {
    position: relative;
  }
  .search-result-box {
    position: absolute;
    padding-bottom: 5px;
    border: 1px solid #d9d9d9;
    border-radius: 5px;
    border-top: none;
    top: 100%;
    left: 0;
    width: 100%;
    max-height: 100px;
    overflow: auto;
    background-color: #fff;
    z-index: 10;
    box-sizing: border-box;
    box-shadow: 0 4px 6px 0 #d9d9d9;
  }
  .result-item {
    padding: 2px 11px;
    transition: all 0.2s;
    cursor: pointer;
    position: relative;
    &:hover, &.result-item-active {
      background-color: #eee;
    }
  }

}

.content-box[data-shipping-methods] {
  .radio__input {
    display: none;
  }
  .content-box__row {
    background-color: $primaryColor;
    padding-top: 16px;
    padding-bottom: 16px;
  }
  .radio__label {
    color: #fff;
    font-size: 16px;
    span {
      color: #fff;
      font-weight: normal;
      vertical-align: middle;
    }
  }
}

.field__input {
  &.autofill {
    pointer-events: none;
    background-color: #f3f3f3;
  }
  &#checkout_shipping_address_id {
    option:disabled {
      background-color: #f3f3f3;
      color: #444444;
    }
  }
}

.delivery-dates-block, .delivery-hours-block, .subscription-block, .checkout-note {
  margin-top: 32px;
  .section__header {
    margin-bottom: 16px;
    display: block;
  }
  .section__subtitle {
    margin-top: 8px;
  }
}

.delivery-dates-block.hide-last-day-block .delivery-dates-block-item:last-child{
  display: none;
}

.delivery-dates-block-inner {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  margin-left: -16px;
}

.delivery-dates-block-inner.smaller-blocks {
  margin-left: 0;
}
.smaller-blocks .delivery-dates-block-item {
  width: calc(100% / 6);
  padding-left: 4px;
  label{
    padding: 8px 4px;
    min-height: 65px;
  }
  @media screen and (max-width: 400px){
    padding-left: 0;
    label{
      font-size: 14px;
    }
  }
}

.delivery-dates-block-item {
  width: 33.33%;
  padding-left: 16px;
  input {
    display: none;
  }
  label {
    border-radius: 4px;
    border: 2px solid $primaryColor;
    padding: 16px 16px;
    display: block;
    text-align: center;
    font-size: 16px;
    line-height: 1.3;
    transition: all 0.3s;
    cursor: pointer;
    color: {{ settings.color_body_text }};
    min-height: 64px;
  }
  input:checked ~ label {
    background-color: $primaryColor;
    color: #fff;
  }
  .delivery-day-name {
    text-transform: uppercase;
  }
  @media screen and (max-width: 999px){
    label {
      padding: 16px 8px;
    }
  }
}

.subscription-block {
  input[type="radio"] {
    display: none;
  }
  .purchase-types {
    margin-bottom: 16px;
    label {
      font-size: 16px;
    }
  }
  .subscription-frequency-items {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
  }
  .subscription-frequency-item {
    width: calc(50% - 8px);
  }
  .subscription-frequency-item, .purchase-types-item {
    position: relative;
    margin-bottom: 16px;
    label {
      padding: 16px 16px 16px 40px;
      border-radius: 4px;
      border: 2px solid #dcdcdc;
      transition: all 0.3s;
      cursor: pointer;
      display: block;
    }
    input:checked ~ label {
      background-color: $primaryColor;
      border-color: $primaryColor;
      color: #fff;
    }
  }
}

.delivery-hours-block {
  .delivery-hours-block-item {
    position: relative;
    margin-bottom: 16px;
    input {
      display: none;
    }
    label {
      padding: 16px 16px 16px 40px;
      border-radius: 4px;
      border: 2px solid #dcdcdc;
      display: flex;
      flex-flow: row wrap;
      justify-content: space-between;
      align-items: center;
      transition: all 0.3s;
      cursor: pointer;
      span {
        display: block;
        line-height: 1.2;
      }
      .delivery-hours-title {
        font-size: 16px;
      }
      .delivery-hours-info {
        color: #868686;
      }
    }
    input:checked ~ label {
      background-color: $primaryColor;
      border-color: $primaryColor;
      color: #fff;
      .delivery-hours-info {
        color: #fff;
      }
    }
  }
  @media screen and (max-width: 999px){
    label {
      .delivery-hours-info {
        width: 100%;
      }
    }
  }
}

.delivery-radio-btn {
  position: absolute;
  width: 16px;
  height: 16px;
  border-radius: 50%;
  border: 1px solid #c4cdd5;
  transform: translateY(-50%);
  top: 50%;
  left: 12px;
  transition: all 0.2s;
  pointer-events: none;
  &:after {
    content: '';
    display: block;
    position: absolute;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    transform: translate(-50%, -50%);
    top: 50%;
    left: 50%;
    background-color: $primaryColor;
    opacity: 0;
    transition: all 0.2s;
  }
}
input:checked ~ .delivery-radio-btn {
  border-color: #fff;
  background-color: #fff;
  &:after {
    opacity: 1;
  }
}

.checkout-error {
  font-weight: 600;
  color: #e32c2b;
}

.content {
  opacity: 1;
  transition: opacity 1s;
}

.js .checkout-loading {
  .content {
    opacity: 0;
  }
  .custom-spinner {
    display: block;
    > div {
      -webkit-animation: custom-spinner-loader 1.3s linear infinite;
      animation: custom-spinner-loader 1.3s linear infinite;
      &:nth-child(1) {
        -webkit-animation-delay: 0.39s;
        animation-delay: 0.39s;
      }
      &:nth-child(2) {
        -webkit-animation-delay: 0.52s;
        animation-delay: 0.52s;
      }
      &:nth-child(3) {
        -webkit-animation-delay: 0.65s;
        animation-delay: 0.65s;
      }
    }
  }
}

.custom-spinner{
  transform: translate(-50%, -50%);
  left: 50%;
  top: 50%;
  position: fixed;
  z-index: 2;
  display: none;
  > div {
    height: 150px;
    width: 50px;
    display: inline-block;
    background-color: $primaryColor;
    border: 1px solid $primaryColor;
    -webkit-transform: scale(0.91);
    transform: scale(0.91);
  }
  @media screen and (max-width: 999px){
    > div {
      height: 120px;
      width: 40px;
    }
  }
}

@-webkit-keyframes custom-spinner-loader {
  0% {
    -webkit-transform: scale(1.2);
    opacity: 1
  }
  100% {
    -webkit-transform: scale(0.7);
    opacity: 0.1
  }
}

@keyframes custom-spinner-loader {
  0% {
    transform: scale(1.2);
    opacity: 1
  }
  100% {
    transform: scale(0.7);
    opacity: 0.1
  }
}

.step__footer__continue-btn {
  &.btn--disabled {
    pointer-events: none;
  }
}

/* Checkout - Pop up (when customer already has subscription) */
.body-no-scroll::after {
  visibility: hidden;
  opacity: 0;
  content: '';
  display: block;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.6);
  z-index: 999;
  transition: all 0.45s cubic-bezier(0.29, 0.63, 0.44, 1);
}

body.body-no-scroll {
  overflow: hidden;
  &:after {
    visibility: visible;
    opacity: 1;
  }
}

.subscriptionsPopup__wrapper {
  display: none;
  position: fixed;
  z-index: 1000;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 4px;
  background-color: #ffffff;
  padding: 16px;
  max-width: 968px;
  width: 90%;
  box-sizing: border-box;

  .close-pop-up-icon {
    border: none;
    background: transparent;
    position: absolute;
    right: 16px;

    svg {
      display: inline-block;
      width: 16px;
      height: 16px;
      vertical-align: middle;
      fill: currentColor;
    }
  }

  .subscriptionsPopup__content {
    padding: 24px 32px 19px;
    text-align: center;
    color: #333333;

    @media screen and (max-width: 650px) {
      padding: 16px 16px 11px;
    }
  }

  .subscriptionsPopup__buttons {
    display: flex;
    align-items: center;
    justify-content: space-around;
    flex-wrap: wrap;
    margin-top: 10px;

    .btn {
      border-radius: 4px;
      background-color: transparent;
      border: solid 2px #333;
      padding: 16px;
      font-size: 18px;
      font-weight: bold;
      letter-spacing: 1px;
      text-transform: uppercase;
      color: #010101;
      cursor: pointer;
      margin: 5px 0;
      min-width: 275px;

      &.btn-yellow {
        background-color: #fbb03b;
        border-color: #fbb03b;
      }

      @media screen and (max-width: 650px) {
        font-size: 1em;
      }
    }
  }
}
.main .input-checkbox.input--red {
  border-color: red;
}

.checkoutPermissionNote__pop-up{
  display: block;
  position: fixed;
  z-index: 1000;
  background-color: white;
  padding: 40px 20px 20px;
  height: 90%;
  max-width: 1000px;
  border: 1px grey solid;
  border-radius: 16px;
  top: 50%;
  left: 50%;
  margin-right: -50%;
  transform: translate(-50%, -50%);

  &.hide{
    display: none;
  }

  .close-pop-up-icon{
    width: 25px;
    position: absolute;
    right: 20px;
    top: 10px;
  }

  h2, h3, h4{
    font-weight: bold;
  }

  h2{
    font-size: 26px;
    margin-bottom: 16px;
    text-align: center;
  }

  h3 {
    margin-top: 10px;
    text-align: center;
    font-size: 20px;
  }

  h4{
    margin-top: 10px;
  }

  ol, ul{
    margin-left: 10px;
  }

  ul {
    list-style-type: circle;
    padding-left: 20px;
  }

  div ~ div{
    margin-top: 20px;
  }

  h3 ~ div{
    margin-top: 0;
  }

  .checkoutPermissionNote__pop-up-content{
    height: calc(100% - 102px);
    margin-bottom: 16px;
    overflow-y: auto;
    padding: 0 10px;
  }

  .checkoutPermissionNote__pop-up-navigation{
    display: flex;
    justify-content: space-between;
    align-items: center;

    p{
      font-weight: bold;
    }

    button{
      cursor: pointer;
      background-color: #fbb03b;
      background-clip: border-box;
      -webkit-box-sizing: border-box;
      box-sizing: border-box;
      border: 1px transparent solid;
      border-radius: 5px;
      color: #32230c;
      font-weight: 500;
      padding: 5px 20px;
      text-align: center;
    }
  }
}
.wm-360-info{
  display: none;
  margin-top: 2em;
  svg{
    width: 100%;
    height: 44px;
  }
  p{
    margin: 12px 2px 16px 0;
    font-size: 14px;
    line-height: 1.5;
    letter-spacing: 1px;
    color: #fbb03c;
    text-transform: uppercase;
    text-align: center;
  }
  @media screen and (max-width: 999px){
    margin-top: 0;
  }
}