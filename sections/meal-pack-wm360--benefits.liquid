"type": "text",
"id": "wm360BenefitsTitle",
"label": "Title",
"default": "Your title"
},
{
"type": "richtext",
"id": "wm360BenefitsSubTitleText",
"label": "Text",
"default": "<p>Your text</p>"
},
{
"type": "color",
"id": "wm360BenefitsSubTitleTextColor",
"label": "Color (text)",
"default": "#181818"
},
{
"type": "url",
"id": "button_link",
"label": "Button"
},
{
"type": "text",
"id": "button_title",
"label": "Button title"
}
],
"blocks": [
{
"type": "text",
"name": "Advantage",
"settings": [
{
"type": "image_picker",
"id": "wm360BenefitsCardImg",
"label": "Image"
},
{
"type": "text",
"id": "wm360BenefitsCardTitle",
"label": "Title",
"default": "Your title"
},
{
"type": "color",
"id": "wm360BenefitsCardTitleColor",
"label": "Color (title)",
"default": "#010101"
},
{
"type": "richtext",
"id": "wm360BenefitsCardText",
"label": "Text",
"default": "<p>Your text</p>"
},
{
"type": "color",
"id": "wm360BenefitsCardTextColor",
"label": "Color (text)",
"default": "#010101"
}
]
}]
}
{% endschema %}