{{ 'ndis-template.css' | asset_url | stylesheet_tag }}
<div class="ndis-banner__container">
    <div class="ndis-banner__wrap">
        {% if section.settings.image_desktop == blank and section.settings.image_tablet == blank and section.settings.image_mobile == blank %}
            <h3 class="ndis-banner__text--blank"> Please choose your banner image</h3>
        {% else %}
            {%- assign icon_desktop = section.settings.image_desktop.src -%}
            {%- assign img_url_desktop = icon_desktop | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
            <img class="ndis-banner__img lazyload banner-meal-pack--image-desktop"
                 src="{{ icon_desktop | img_url: '50x' }}"
                 src="{{ img_url_desktop }}"
                 data-widths="[50, 100, 180, 250, 300, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                 data-sizes="auto"
                 alt="{{ icon_desktop.alt | default: 'Workout Meals ™' | escape }}">

            {%- assign icon_tablet = section.settings.image_tablet.src -%}
            {%- assign img_url_tablet = icon_tablet | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
            <img class="ndis-banner__img lazyload banner-meal-pack--image-tablet"
                 src="{{ icon_tablet | img_url: '50x' }}"
                 src="{{ img_url_tablet }}"
                 data-widths="[50, 100, 180, 250, 300, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                 data-sizes="auto"
                 alt="{{ icon_tablet.alt | default: 'Workout Meals ™' | escape }}">

            {%- assign icon_mobile = section.settings.image_mobile.src -%}
            {%- assign img_url_mobile = icon_mobile | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
            <img class="ndis-banner__img lazyload banner-meal-pack--image-mobile"
                 src="{{ icon_mobile | img_url: '50x' }}"
                 src="{{ img_url_mobile }}"
                 data-widths="[50, 100, 180, 250, 300, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                 data-sizes="auto"
                 alt="{{ icon_mobile.alt | default: 'Workout Meals ™' | escape }}">
        {% endif %}
        <div class="ndis-on-banner__container {{ section.settings.content_position }}">
            {%- if section.settings.sub_headline_d != blank -%} <div style="color: {{ section.settings.sub_header_color }}" class="ndis-on-banner_subtitle--desktop">{{ section.settings.sub_headline_d }}</div> {%  endif %}
            {%- if section.settings.sub_headline_m != blank -%} <div style="color: {{ section.settings.sub_header_color }}" class="ndis-on-banner_subtitle--mob">{{ section.settings.sub_headline_m }}</div> {%  endif %}
            {%- if section.settings.headline_d != blank -%}  <div style="color: {{ section.settings.header_color }}" class="ndis-on-banner__title--desktop"> {{ section.settings.headline_d }}</div> {%  endif %}
            {%- if section.settings.headline_m != blank -%}  <div style="color: {{ section.settings.header_color }}" class="ndis-on-banner__title--mob"> {{ section.settings.headline_m }}</div> {%  endif %}
            {%- if section.settings.paragraph_d != blank -%} <div style="color: {{ section.settings.paragraph_color }}" class="ndis-on-banner__text--desktop">{{ section.settings.paragraph_d }}</div> {% endif %}
            {%- if section.settings.paragraph_m != blank -%} <div style="color: {{ section.settings.paragraph_color }}" class="ok ndis-on-banner__text--mob">{{ section.settings.paragraph_m }}</div> {% endif %}
        </div>
    </div>
    <div class="ndis-banner__text-container">
        <h1 class="ndis-banner__text"
             style="color: {{ section.settings.color-paragraph-1 }}">{{ section.settings.Text-paragraph-1 }}</h1>
        <div class="ndis-banner__text"
             style="color: {{ section.settings.color-paragraph-2 }}">{{ section.settings.Text-paragraph-2 }}</div>
    </div>

</div>

{% schema %}
{
"name": "NDIS banner",
"settings": [
{
"type": "image_picker",
"id": "image_desktop",
"label": "Desktop Image"
},
{
"type": "image_picker",
"id": "image_tablet",
"label": "Tablet Image"
},
{
"type": "image_picker",
"id": "image_mobile",
"label": "Mobile Image"
},
{
"type": "select",
"id": "content_position",
"label": "Content position",
"options": [
{
"label": "Top",
"value": "ndis-on-banner__container--top"
},
{
"label": "Center",
"value": ""
},
{
"label": "Bottom",
"value": "ndis-on-banner__container--bottom"
}
]
},
{
"type": "richtext",
"id": "sub_headline_d",
"label": "Sub-headline desktop"
},
{
"type": "richtext",
"id": "sub_headline_m",
"label": "Sub-headline mobile"
},
{
"type": "color",
"id": "sub_header_color",
"label": "Sub-headline color",
"default": "#000000"
},
{
"type": "richtext",
"id": "headline_d",
"label": "Headline desktop"
},
{
"type": "richtext",
"id": "headline_m",
"label": "Headline mobile"
},
{
"type": "color",
"id": "header_color",
"label": "Headline color",
"default": "#000000"
},
{
"type": "richtext",
"id": "paragraph_d",
"label": "Paragraph desktop"
},
{
"type": "richtext",
"id": "paragraph_m",
"label": "Paragraph mobile"
},
{
"type": "color",
"id": "paragraph_color",
"label": "Paragraph color",
"default": "#000000"
},
{
"type": "header",
"content": "Text under the banner"
},
{
"id": "Text-paragraph-1",
"type": "text",
"label": "Paragraph 1",
"default": "Your text"
},
{
"id": "color-paragraph-1",
"type": "color",
"label": "Color (paragraph 1) ",
"default": "#010101"
},
{
"id": "Text-paragraph-2",
"type": "richtext",
"label": "Paragraph 2",
"default": "<p>Your text</p>"
},
{
"id": "color-paragraph-2",
"type": "color",
"label": "Color (paragraph 2)",
"default": "#fbb03c"
}
],"presets": [
{
"name": "NDIS Banner"
}
]
}
{% endschema %}
