{% if section.settings.show_section %}
    <section data-section-id="{{ section.id }}"  id="section-{{ section.id }}">
        <h3>{{ section.settings.title | escape }}</h3>

        {%- if section.settings.blog != blank -%}
            {%- assign blog = blogs[section.settings.blog] -%}

            {%- if blog.articles_count > 0 -%}
                <div class="blogs-container">
                    <div class="blogs-wrapper blogs-slider">
                        {% for article in blogs.news.articles %}
                           
                            <div class="slide">
                                {% include 'blog-grid-item' %}
                            </div>
                        {%- endfor -%}
                    </div>
                </div>
            {%- endif -%}
        {%- endif -%}
    </section>
{% endif %}

{% schema %}
    {
    "name": "Atricles",
    "settings": [
    {
    "type": "checkbox",
    "id": "show_section",
    "label": "Show section",
    "default": true
    },
    {
    "type": "text",
    "id": "title",
    "label": "Heading",
    "default": "Blog posts"
    },
    {
    "type": "blog",
    "id": "blog",
    "label": "Blog"
    }
    ],
    "presets": [
    {
    "name": "Articles",
    "category": "Blog",
    "settings": {}
    }
    ]
    }
{% endschema %}