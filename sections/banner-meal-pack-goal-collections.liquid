<section class="banner-collection-info">
    <h2>{{ collection.title | escape }}</h2>
    <div>{{ collection.description }}</div>
</section>
<section class="banner-collection-image">
    {%- assign icon = collection.image.src -%}
    {%- assign img_url = icon | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
    <img class="lazyload"
         data-help="{{ img_url }}"
         src="{{ icon | img_url: '50x' }}"
         data-src="{{ img_url }}"
         data-widths="[50, 100, 250, 300, 180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
         data-sizes="auto"
         alt="{{ icon.alt | default: 'Workout Meals â„¢' | escape }}">
</section>


