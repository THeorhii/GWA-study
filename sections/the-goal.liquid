                                    </div>
                                </div>
                                <div class="meals-of-goal">
                                    <div>
                                        {% if block.settings.meal_female_1 != blank %}
                                            <img class="lazyload"
                                                 src="{{ block.settings.meal_female_1 | img_url: '168x232' }}"
                                                 data-widths="[180, 370, 540, 740, 900, 1080, 1296, 1512, 1728, 2048]"
                                                 data-aspectratio="{{ block.settings.meal_female_1.aspect_ratio }}"
                                                 data-sizes="auto"
                                                 alt="{{ block.settings.meal_female_1.alt | escape }}">
                                        {% endif %}
                                        {% if block.settings.meal_female_title_1 != blank %}
                                            <p>{{ block.settings.meal_female_title_1 }}</p>
                                        {% endif %}
                                    </div>
                                    <div>
                                        {% if block.settings.meal_female_2 != blank %}
                                            <img class="lazyload"
                                                 src="{{ block.settings.meal_female_2 | img_url: '168x232' }}"
                                                 data-widths="[180, 370, 540, 740, 900, 1080, 1296, 1512, 1728, 2048]"
                                                 data-aspectratio="{{ block.settings.meal_female_2.aspect_ratio }}"
