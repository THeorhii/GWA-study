                                        {% endif %}
                                        {% if block.settings.meal_female_title_3 != blank %}
                                            <p>{{ block.settings.meal_female_title_3 }}</p>
                                        {% endif %}
                                    </div>
                                </div>
                                <a href="{{ block.settings.button_link_female }}" class="btn std-btn">{{ block.settings.button_text_female }}</a>
                            </div>
                            <div class="goal-image">
                                {% if block.settings.trainer-female-photo != blank %}
                                    <img class="lazyload"
                                         src="{{ block.settings.trainer-female-photo | img_url: '650x730' }}"
                                         data-widths="[180, 370, 540, 740, 900, 1080, 1296, 1512, 1728, 2048]"
                                         data-aspectratio="{{ block.settings.trainer-female-photo.aspect_ratio }}"
                                         data-sizes="auto"
                                         alt="{{ block.settings.trainer-female-photo.alt | escape }}">
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}
                {%- endfor -%}
            </div>
        </div>

    </div>
</section>

