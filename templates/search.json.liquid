{% layout none %}
{% capture results %}
    {% for item in search.results limit:3 %}
        {% if item.object_type == 'product' %}
            {
                "type" : "product",
                "type_product" : {{ item.type | json }},
                "title"    : {{ item.title | json }},
                "url"      : {{ item.url | json }},
                "thumbnail": {{ item.featured_image.src | json }},
                "price": {{ item.price | money | json }}
            }
        {% elsif item.object_type == 'article' %}
            {
                "type" : "article",
                "title"    : {{ item.title | json }},
                "url"      : {{ item.url | json }},
                "thumbnail": {{ item.image.src | json }}
            }
        {% endif %}

        {% unless forloop.last %},{% endunless %}
    {% endfor %}

{% endcapture %}

{
"results_count": {{ search.results_count }},
"results": [{{ results }}]
}