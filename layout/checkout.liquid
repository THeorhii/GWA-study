<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">

    <title>{{ page_title }}</title>

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    {{ 'checkout.scss.css' | asset_url | stylesheet_tag }}

    {{ checkout_scripts }}

    <style>
        .section--remember-me {
            display: none;
        }
        {% for attr in checkout.attributes %}
            {% if attr.first == "cart_subscription" and attr.last == "true"  %}
                {% assign subscription_checkout = true %}
                    [data-alternative-payments], .dynamic-checkout {
                        display: none;
                    }
                {% break %}
            {% endif %}
        {% endfor %}
    </style>

    <!-- REAMAZE INTEGRATION START - DO NOT REMOVE -->
{% render 'reamaze-config' %}
{% render 'reamaze-sso' %}
<!-- REAMAZE INTEGRATION END - DO NOT REMOVE -->

</head>
<body>
<script>
    (function(){
        var stepsWithSpinner = 'contact_information, shipping_method, payment_method';
        if (Shopify.Checkout.step && stepsWithSpinner.indexOf(Shopify.Checkout.step) >= 0){
            document.body.classList.add('checkout-loading');
        }
    })();
</script>
{{ skip_to_content_link }}

<header class="banner" data-header role="banner">
    <div class="wrap">
        {{ content_for_logo }}
    </div>
</header>

{{ order_summary_toggle }}
<div class="content" data-content>
    <div class="wrap">
        <div class="main">
            <header class="main__header" role="banner">
                {{ content_for_logo }}
                {{ breadcrumb }}
                <div class="wm-360-info">
                    {% render 'svg-checkout-wm360' %}
                    <p>{{ 'checkout.header_WM360' | t }}</p>
                </div>
                {{ alternative_payment_methods }}
            </header>
            <main class="main__content" role="main">
                {{ content_for_layout }}
            </main>
            <footer class="main__footer" role="contentinfo">
                {{ content_for_footer }}
            </footer>
        </div>
        <aside class="sidebar" role="complementary">
            <div class="sidebar__header">
                {{ content_for_logo }}
            </div>
            <div class="sidebar__content">
                {{ content_for_order_summary }}
            </div>
        </aside>
    </div>
</div>

<div class="custom-spinner">
    <div></div>
    <div></div>
    <div></div>
</div>

{{ tracking_code }}
{{ '//ajax.googleapis.com/ajax/libs/jquery/2.2.3/jquery.min.js' | script_tag }}
<script async type="text/javascript" src="https://static.klaviyo.com/onsite/js/klaviyo.js?company_id=Qb7Xv6&module=CONSENT_AT_CHECKOUT"></script>
    <script>
        (function(){
        // Remove Express checkout buttons if subscription in cart
        {% if subscription_checkout %}
            var dynamicCheckoutBlock = document.querySelector('[data-alternative-payments]');
            var sectionRememberMe = document.querySelector('.section--remember-me');
            if (dynamicCheckoutBlock) {
                dynamicCheckoutBlock.parentNode.removeChild(dynamicCheckoutBlock);
            }
            if (sectionRememberMe) {
                sectionRememberMe.parentNode.removeChild(sectionRememberMe);
            }
        {% endif %}
        })();
    </script>

{% include 'checkout-delivery-script' %}

</body>
</html>
